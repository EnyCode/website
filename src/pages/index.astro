---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <div id="content-background"></div>
  <main>
    <h1>This page is coming soon!</h1>
    <h2>In the mean time, why not check out <a href="/blog">my blog</a>?</h2>
  </main>
</Layout>

<style lang="scss">
  #content-background {
    position: fixed;
    top: 4rem;
    z-index: -2;
    height: 100vh;
    width: 100%;
    background-image: url("/svg/geometric-dark.svg");
    background-repeat: no-repeat;
    background-position: 50%;
  }
  main {
    margin: auto;
    max-width: 50%;
    border-radius: 1rem;
    margin-top: 7rem;
    text-align: center;

    @media (max-width: 849px) {
      max-width: 90vw;
    }
  }

  footer :global() {
    bottom: 0;
    position: absolute;
    width: calc(100% - 2rem);
  }
</style>
