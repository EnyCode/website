---
export interface Props {
  text: string;
  img?: string;
  link?: string;
  onClick?: string;
  outline?: boolean;
}

const { text, img, link, onClick, outline = false } = Astro.props;
---

<div onclick={onClick} class={`button ${outline ? "outline" : ""}`}>
  {img == undefined ? "" : <img src={img} />}
  <span>{text}</span>
</div>
<style lang="scss">
  .button {
    height: 1rem;
    width: max-content;
    padding: 0 0.5rem;
    padding-bottom: 1rem;
    border-radius: 5px;
    background-color: var(--background-primary);
    transition: background-color 0.2s ease-in-out;
    cursor: pointer;
    user-select: none;

    &:hover {
      background-color: var(--background-secondary);
    }

    img {
      height: 1.25rem;
      width: 1.25rem;
      margin-top: 0.4rem;
    }

    span {
      float: right;
      margin-top: 0.25rem;
      margin-left: 0.3rem;
    }
  }

  .outline {
    outline: 2px solid var(--green-hover);
  }
</style>
