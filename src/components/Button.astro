---
export interface Props {
  text: string;
  img?: string;
  link?: string;
  onClick?: string;
  outline?: boolean;
}

const { text, img, link, onClick, outline = false } = Astro.props;
---

<div
  onclick={onClick}
  onkeydown="
  buttonClick(e)
  "
  class={`button ${outline ? "outline" : ""}`}
>
  {img == undefined ? "" : <img src={img} />}
  <span>{text}</span>
</div>
<script define:vars={{ onClick }}>
function buttonClick(event) {
  if (event.key == "Enter") {
    onClick();
  }
}
</script>
<style lang="scss">
  .button {
    height: 0.75rem;
    width: max-content;
    padding: 0 0.375rem;
    padding-bottom: 1rem;
    border-radius: 5px;
    background-color: var(--element-color);
    border: solid 2px var(--secondary-color);
    transition: border-color 0.2s ease-in-out;
    cursor: pointer;
    user-select: none;

    &:hover {
      border-color: var(--accent-color);
    }

    img {
      height: 1.25rem;
      width: 1.25rem;
      margin-top: 0.4rem;
    }

    span {
      float: right;
      margin-top: 0.25rem;
      margin-left: 0.3rem;
    }
  }

  .outline {
    outline: 2px solid var(--accent-color);
  }
</style>
