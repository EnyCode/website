---
import { formatDate } from "../util.js";

import Layout from "../layouts/Layout.astro";

export interface Props {
  title: string;
  author: string;
  img: string;
  tags: string[];
  date: string;
  minutesRead: string;
}

const { title, author, img, minutesRead, date } = Astro.props["frontmatter"];

const rawDate = date.split("-");
const parsedDate = formatDate(
  new Date(parseInt(rawDate[2]), parseInt(rawDate[1]) - 1, parseInt(rawDate[0]))
);
---

<Layout title={title}>
  <img
    alt="Background Image"
    src="https://www.lizwfineart.com/wp-content/uploads/2016/03/Firey-Sunset-in-the-Virgin-Islands-Liz-W-Seascape-Painting-close-up-2.jpg"
    id="bg"
  />
  <div id="content-background"></div>
  <main>
    <div id="intro">
      <img alt="Background Image" id="intro-bg" src={img} />
      <div>
        <h1>{title}</h1>
        <br />
        <span>{author} • {parsedDate} • {minutesRead}</span>
      </div>
    </div>
    <div id="content">
      <slot />
    </div>
  </main>
</Layout>
<style lang="scss">
  main {
    margin: auto;
    max-width: 50vw;
    background-color: var(--green-color);
    border-radius: 1rem;
    margin-top: 7rem;
    box-shadow: 0 3px 10px -3px #000;

    @media (max-width: 849px) {
      max-width: 90vw;
    }

    @media (max-width: 649px) {
      max-width: 100vw;
      margin-top: 0;
      border-radius: 0;
    }
  }

  #intro {
    height: 25rem;
    margin: 0;
    border-radius: 10px 10px 0 0;
    display: flex;
    align-content: center;
    background-image: linear-gradient(
      60deg,
      rgba(0, 0, 0, 0.6),
      rgba(0, 0, 0, 0.6)
    );
    opacity: 0.9;
    color: var(--text-bright);

    div {
      position: absolute;
      left: 50%;
      top: 35%;
      transform: translate(-50%, -35%);
      text-align: center;
      font-weight: 500;

      @media (max-width: 649px) {
        top: 15%;
        transform: translate(-50%, -15%);
      }
    }
  }

  #intro-bg {
    object-fit: cover;
    height: 100%;
    width: 100%;
    margin: 0;
    border-radius: 10px 10px 0 0;
    filter: brightness(73%);
  }

  #bg {
    position: absolute;
    filter: blur(5px);
    z-index: -1;
    height: 30rem;
    width: 100%;
  }

  #content-background {
    position: fixed;
    top: 4rem;
    z-index: -2;
    height: 100vh;
    width: 100%;
    background-image: url("/svg/geometric-dark.svg");
    background-repeat: no-repeat;
    background-position: 50%;
  }

  #content {
    padding: 1.5rem;
    font-size: 1.1rem;

    img {
      object-fit: contain;
      width: 100%;
    }

    hr {
      color: var(--accent-color);
    }

    blockquote {
      padding-left: 10px;
      border-left: solid 4px var(--dark-grey);
    }
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .astro-code {
    padding: 0.5rem;
    border-radius: 10px;
  }
  @media (max-width: 649px) {
    footer :global() {
      margin-top: 0;
      box-shadow: none;
    }

    ul :global() {
      padding: 0;
      margin: 0 0 0 2rem;
    }
  }
</style>
